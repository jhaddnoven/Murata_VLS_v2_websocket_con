<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Replace with your desired box color (transparent in this example) -->
        </shape>
    </item>

    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <line android:color="#8A102DE6" /> <!-- Replace with your desired corner line color -->
            <stroke
                android:color="#8A102DE6"
                android:width="6dp" />

            <corners android:radius="8dp" /> <!-- Adjust the corner radius as desired -->
        </shape>
    </item>
</layer-list>
